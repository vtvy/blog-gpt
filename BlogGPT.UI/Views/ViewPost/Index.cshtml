@model List<PostModel>

@using BlogGPT.UI.ViewModels.Post;
@using BlogGPT.UI.ViewModels.Category;
@using BlogGPT.UI.Views.Shared.Components.CategorySidebar;
@{
    List<IndexCategoryModel> categories = ViewBag.categories as List<IndexCategoryModel>;
    IndexCategoryModel category = ViewBag.category as IndexCategoryModel;
    ViewData["Title"] = (category != null) ? category.Name :
                        "Bài viết trong tất cả các danh mục";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="~/">Home</a></li>
        @if (category != null)
        {
            @* var li = category.ListParents(); *@
            @* foreach (var l in li)
            {
                <li class="breadcrumb-item">
                    <a asp-action="Index" asp-route-categoryslug="@l.Slug">@l.Name</a>
                </li>
            } *@
        }
    </ol>
</nav>



<h1>@ViewData["Title"]</h1>
@if (category != null)
{
    <p>@category.Name</p>
}
else
{
    <p>Bài viết trong tất cả các danh mục ...</p>
}
<hr>

@foreach (var post in Model)
{
    <div class="media border-bottom mb-3 pb-3">
        <img src="/files/thumnail.png" class="mr-3 w-25">
        <div class="media-body">
            <h5 class="mt-0">
                <a asp-controller="ViewPost" asp-action="Detail" asp-route-postslug="@post.Slug">
                    @post.Title
                </a>
            </h5>
            @post.Description
            <div>
                Chủ đề:
                <strong class="text-danger">
                    @post.PostCategories.FirstOrDefault()?.CategoryID;
                </strong>
            </div>
@*             <div class="author-row">
                Tác giả: <strong>@post.Author.UserName</strong> |
                Ngày cập nhật : <i>@post.DateUpdated.ToShortDateString()</i>
            </div> *@
        </div>
    </div>
}


@section Sidebar {
    @await Component.InvokeAsync("BlogGPT.UI.Components.CategorySidebar",
        new CategorySidebar.CategorySidebarData()
        {
            Categories = categories,
            level = 0,
            categoryslug = ViewBag.categoryslug
        })
}


<partial name="_Paging" model="@ViewBag.pagingModel" />